<h1>Sign in</h1>
<div class="card">
  <div class="card-body">
  <%= form_tag signin_path do %>
    <%= label_tag :email %>
    <%= text_field :email, :class => "form-control" %>
    <hr>
    <%= label_tag :password %>
    <%= password_field :password, :class => "form-control" %>
    <br>
    <%= submit_tag "Sign in", :class => "btn btn-success form-control", id: "sign_in_button" %>
  <% end %>
  </div>
</div>
