<h1>Sign in</h1>
<div class = "card form-group">
  <div class= "card-body">
  <%= form_for signin_path do %>
    <%= label_tag :email %>
    <%= text_field :email, :class => "form-control" %>
    <br>
    <%= label_tag :password %>
    <%= password_field :password, :class =>  "form-control" %>
    <br>
    <%= submit_tag "Sign in", id: "sign_in_button", :class => "btn btn-success" %>
  <% end %>
  </div>
</div>
