<!DOCTYPE html>
<html>
  <head>
    <title>Grondo's Bazaar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <div class="row">
        <div class="col-md-5">
          <% if current_user %>
          <%= link_to "Home", products_path %>  | <%= current_user.email %> | <%= link_to "Sign out", '/signout', id: "signout" %> | <%= link_to image_tag("shopping-cart.png", size: "26x20", alt: "Cart"), cart_path %>
          <% else %>
            <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin', id: "signin" %>
          <% end %>

          <%= flash[:alert] %>
          <%= flash[:notice] %>
          <br>
          <%= yield %>
        </div>
        <div class="col-md-5">
        
        </div>
      </div>
    </div>
  </body>
</html>
