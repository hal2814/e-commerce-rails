<!DOCTYPE html>
<html>
  <head>
    <title>Grondo's Bazaar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <div class="row">
        <div class="col-md-5">
          <div class="log_links">

            <% if current_user %>
            <%= link_to "Home", products_path %>  | <%= current_user.email %> | <%= link_to "Sign out", '/signout', id: "signout" %> | <%= link_to image_tag("shopping-cart.png", size: "26x20", alt: "Cart"), cart_path, remote: true %>
            <% else %>
              <%= link_to "Sign up", '/signup', id: 'sign_up_link', remote: true %> | <%= link_to "Sign in", '/signin', remote: true %>
            <% end %>
          </div>
          <div id="flash">
            <%= flash[:alert] %>
            <%= flash[:notice] %>
          </div>
          <script type="text/javascript">
          $(document).ready(function(){
            setTimeout(function(){
              $('#flash').fadeOut(1000);
            }, 5000);
          })
          </script>
          <br>
          <%= yield %>
        </div>
        <div class="col-md-5">
          <span id="sign_up"></span>
          <span id="sign_in"></span>
          <span id="product_show"></span>
        </div>
        <div class="col-md-2">
          <span id="cart_show"></span>
        </div>
      </div>
    </div>
  </body>
</html>
