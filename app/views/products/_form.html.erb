<%= form_for @product do |f| %>
<div class= "card">
  <div class= "card-body form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
    <%= f.label :price %>
    <%= f.number_field :price, :class => "form-control" %>
    <%= f.submit %>
    <% end %>
  </div>
</div>
